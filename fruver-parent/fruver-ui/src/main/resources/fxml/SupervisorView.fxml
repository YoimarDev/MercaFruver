<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.miempresa.fruver.ui.controller.SupervisorController"
            stylesheets="@/css/styles.css"
            prefWidth="1200" prefHeight="800">

    <!-- TOP -->
    <top>
        <HBox styleClass="topbar" alignment="CENTER_LEFT" spacing="8">
            <padding>
                <Insets top="8" left="12" right="12" bottom="8"/>
            </padding>
            <Label text="Merca Fruver C.Y.E. — Supervisor" styleClass="brand"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnSalir" text="Salir" onAction="#onSalir" styleClass="primary-button" minWidth="120"/>
        </HBox>
    </top>

    <!-- CENTER: split lista / formulario+estadísticas (derecha -> TabPane Detalle / Estadísticas) -->
    <center>
        <SplitPane orientation="HORIZONTAL" dividerPositions="0.48">
            <items>

                <!-- Left: filtro + tabs (PESO / UNIDAD) -->
                <VBox spacing="8" prefWidth="560">
                    <padding>
                        <Insets top="12" right="12" bottom="12" left="12"/>
                    </padding>

                    <!-- Global filter + Nuevo -->
                    <HBox spacing="8">
                        <TextField fx:id="txtFiltro" promptText="Buscar producto..." HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnNuevoProducto" text="Nuevo" onAction="#onNuevoProducto" styleClass="primary-button"/>
                    </HBox>

                    <!-- Tabs: PESO / UNIDAD -->
                    <TabPane prefHeight="620" tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <Tab text="PESO" styleClass="product-list-tab">
                                <content>
                                    <VBox spacing="8">
                                        <padding>
                                            <Insets top="8" right="8" bottom="8" left="8"/>
                                        </padding>
                                        <Label text="Productos por peso (frutas/verduras)" />
                                        <ListView fx:id="lvProductosPeso" prefHeight="560" />
                                    </VBox>
                                </content>
                            </Tab>
                            <Tab text="UNIDAD" styleClass="product-list-tab">
                                <content>
                                    <VBox spacing="8">
                                        <padding>
                                            <Insets top="8" right="8" bottom="8" left="8"/>
                                        </padding>
                                        <Label text="Productos por código (unidad)" />
                                        <ListView fx:id="lvProductosUnidad" prefHeight="560" />
                                    </VBox>
                                </content>
                            </Tab>
                        </tabs>
                    </TabPane>
                </VBox>

                <!-- Right: TabPane -> Detalle | Estadísticas -->
                <VBox spacing="10" prefWidth="640">
                    <padding>
                        <Insets top="12" right="12" bottom="12" left="12"/>
                    </padding>

                    <TabPane prefHeight="760" tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <!-- TAB: DETALLE (formulario de producto) -->
                            <Tab text="Detalle" >
                                <content>
                                    <VBox spacing="10">
                                        <Label text="Detalles del Producto" style="-fx-font-size:18px; -fx-font-weight:600;"/>

                                        <GridPane hgap="8" vgap="8">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="30"/>
                                                <ColumnConstraints percentWidth="70"/>
                                            </columnConstraints>

                                            <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                            <TextField fx:id="txtCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                            <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                            <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                            <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                            <ComboBox fx:id="cbTipo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                            <Label text="Precio (unidad):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                            <TextField fx:id="txtPrecio" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                            <Label text="Stock (actual):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                            <TextField fx:id="txtStock" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                            <Label text="Stock UMB:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                            <TextField fx:id="txtStockUmb" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                                            <Label text="Imagen:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                                            <HBox spacing="8" GridPane.rowIndex="6" GridPane.columnIndex="1">
                                                <ImageView fx:id="ivImagen" fitWidth="140" fitHeight="96" preserveRatio="true"/>
                                                <VBox spacing="6">
                                                    <Button fx:id="btnSubirImagen" text="Subir..." onAction="#onSubirImagen" />
                                                    <Label fx:id="lblImagenPath" wrapText="true"/>
                                                </VBox>
                                            </HBox>
                                        </GridPane>

                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <Button fx:id="btnCrear" text="Crear" onAction="#onCrear" styleClass="primary-button" minWidth="110"/>
                                            <Button fx:id="btnActualizar" text="Actualizar" onAction="#onActualizar" styleClass="primary-button" minWidth="110"/>
                                            <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar" styleClass="danger-button" minWidth="110"/>
                                            <Region HBox.hgrow="ALWAYS"/>
                                            <Label fx:id="lblStatus" wrapText="true"/>
                                        </HBox>
                                        <Region VBox.vgrow="ALWAYS"/>
                                    </VBox>
                                </content>
                            </Tab>

                            <!-- TAB: ESTADÍSTICAS -->
                            <Tab text="Estadísticas">
                                <content>
                                    <VBox spacing="8">
                                        <padding>
                                            <Insets top="8" right="8" bottom="8" left="8"/>
                                        </padding>

                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <Label text="Estadísticas de ventas" style="-fx-font-size:16px; -fx-font-weight:700;" />
                                            <Region HBox.hgrow="ALWAYS"/>
                                            <Button fx:id="btnExpandStats" text="Expandir estadísticas" onAction="#onExpandStats" styleClass="ghost-button"/>
                                        </HBox>

                                        <HBox spacing="8" alignment="CENTER_LEFT">
                                            <Label text="Rango:"/>
                                            <DatePicker fx:id="dpFrom" promptText="Desde" />
                                            <DatePicker fx:id="dpTo" promptText="Hasta" />
                                            <Button fx:id="btnRefreshStats" text="Actualizar" onAction="#onRefreshStats" styleClass="primary-button" />
                                            <Button fx:id="btnLast7" text="Últimos 7 días" styleClass="ghost-button" />
                                            <Button fx:id="btnToday" text="Hoy" styleClass="ghost-button" />
                                        </HBox>

                                        <HBox spacing="12" alignment="CENTER_LEFT">
                                            <VBox>
                                                <Label text="Ventas en rango" style="-fx-font-weight:600;"/>
                                                <Label fx:id="lblTotalVentas" text="—" styleClass="stat-label" />
                                            </VBox>
                                            <Region HBox.hgrow="ALWAYS"/>
                                            <Label fx:id="lblRangeInfo" text="" />
                                        </HBox>

                                        <Separator />

                                        <!-- Cards / Resumen compacto -->
                                        <HBox spacing="12" alignment="CENTER_LEFT">
                                            <VBox styleClass="top-card">
                                                <Label text="Total productos" style="-fx-font-weight:600;"/>
                                                <Label fx:id="lblTotalProductos" text="0" styleClass="stat-label"/>
                                            </VBox>
                                            <VBox styleClass="top-card">
                                                <Label text="Productos PESO" style="-fx-font-weight:600;"/>
                                                <Label fx:id="lblPesoCount" text="0" styleClass="stat-label"/>
                                            </VBox>
                                            <VBox styleClass="top-card">
                                                <Label text="Productos UNIDAD" style="-fx-font-weight:600;"/>
                                                <Label fx:id="lblUnidadCount" text="0" styleClass="stat-label"/>
                                            </VBox>
                                            <Region HBox.hgrow="ALWAYS"/>
                                            <VBox alignment="CENTER_RIGHT" styleClass="top-card">
                                                <Label text="Espacio BD (Admin)" style="-fx-font-weight:600;"/>
                                                <Label fx:id="lblDbInfo" text="sin datos" wrapText="true"/>
                                            </VBox>
                                        </HBox>

                                        <Separator />

                                        <Label text="Top productos (por métricas)" style="-fx-font-weight:600;"/>
                                        <ListView fx:id="lvTopProductos" prefHeight="240"/>

                                    </VBox>
                                </content>
                            </Tab>
                        </tabs>
                    </TabPane>

                </VBox>

            </items>
        </SplitPane>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="12" bottom="10" left="12"/>
            </padding>
            <Label text="Supervisor • fruver" styleClass="version-label"/>
        </HBox>
    </bottom>
</BorderPane>

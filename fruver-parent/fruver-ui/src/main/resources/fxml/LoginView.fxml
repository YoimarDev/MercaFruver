<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.miempresa.fruver.ui.LoginController"
            stylesheets="@/css/styles.css" prefWidth="1000" prefHeight="640">

    <!-- Top: título -->
    <top>
        <HBox styleClass="topbar" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="12" bottom="10" left="12"/>
            </padding>
            <Label text="Merca Fruver C.Y.E." styleClass="brand"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Acceso" style="-fx-text-fill: white; -fx-font-weight: 600;"/>
        </HBox>
    </top>

    <!-- Left: lista de usuarios (tiles) -->
    <left>
        <VBox spacing="8" prefWidth="300" style="-fx-background-color: #ffffff22;">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <Label text="Usuarios" style="-fx-font-size: 18px; -fx-font-weight: 600;"/>

            <HBox spacing="6">
                <Label text="Filtrar:"/>
                <ChoiceBox fx:id="choiceRoleFilter" styleClass="primary-button" prefWidth="140"/>
            </HBox>

            <ListView fx:id="lvUsers" prefWidth="280" styleClass="user-list"/>
        </VBox>
    </left>

    <!-- Center: tarjeta de login -->
    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="18">
                <Pane prefHeight="20"/> <!-- espacio -->
                <VBox styleClass="login-card" spacing="12" alignment="CENTER">
                    <ImageView fx:id="imgAvatar" fitHeight="120" fitWidth="120" preserveRatio="true"/>
                    <Label fx:id="lblSelectedName" style="-fx-font-size:20px; -fx-font-weight:600;"/>
                    <Label fx:id="lblSelectedRole" style="-fx-font-size:14px; -fx-text-fill:#666666;"/>

                    <GridPane hgap="8" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30"/>
                            <ColumnConstraints percentWidth="70"/>
                        </columnConstraints>

                        <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="txtUsername" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                        <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Label fx:id="lblStatus" wrapText="true"/>

                    <HBox spacing="12" alignment="CENTER">
                        <Button fx:id="btnLogin" text="Entrar" styleClass="primary-button" minWidth="160"/>
                        <Button fx:id="btnClearUser" text="Borrar selección" styleClass="primary-button" minWidth="160"/>
                    </HBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="12" bottom="10" left="12"/>
            </padding>
            <Label text="v1.0" styleClass="version-label"/>
        </HBox>
    </bottom>

</BorderPane>
